{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"react/jsx-sort-props": [
			"error",
			{
				"ignoreCase": true,
				"callbacksLast": true,
				"shorthandFirst": true,
				"shorthandLast": false,
				"noSortAlphabetically": false,
				"reservedFirst": true
			}
		],
		"jsx-quotes": ["error", "prefer-double"],
		"quotes": [
			"error",
			"single",
			{ "avoidEscape": true, "allowTemplateLiterals": true }
		],
		"semi": ["warn", "never"],
		"no-unused-vars": "warn",
		"react/react-in-jsx-scope": "off",
		"react/prop-types": "off"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
